@model IEnumerable<OhadsCarRental.Manufacturer>

@{
    ViewBag.Title = "Manufacturers Management - Ohad's Car Rental";
}

<div class="d-section">
    <h1 class="d-title">Manufacturers Management</h1>
    <hr class="d-title-separator" />

    <div class="basic-form">

        <div class="basic-form-row">
            <span class="basic-btn medium main">@Html.ActionLink("Back to Menu", "Index", "Admin")</span>
            <span class="basic-btn medium main right create-fg">@Html.ActionLink("Create New", "Create")</span>
        </div>

        <div class="basic-form-row">
            <div class="model-tbl">

                <div class="model-tbl-th col-3">
                    <span>ID</span>
                    <span>Manufacturer</span>
                    <span>Actions</span>
                </div>

                @foreach (var manufacturer in Model)
                {
                    @Html.Partial("_ManufacturerDetailsPartial", manufacturer)
                }
            </div>
        </div>

        <p class="validation-summary-errors">@ViewBag.ErrorMessage</p>

    </div>
</div>